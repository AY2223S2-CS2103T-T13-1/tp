@startuml
!include style.puml
skinparam arrowThickness 1.1
skinparam arrowColor UI_COLOR_T4
skinparam classBackgroundColor UI_COLOR

package UI <<Rectangle>>{
Class "<<interface>>\nUi" as Ui
Class "{abstract}\nUiPart" as UiPart
Class UiManager
Class MainWindow
Class ProgressSection
Class ResultsSection
Class ModuleSection
Class ModuleGroup
Class FooterButtonGroup
Class CliSection
}

package Model <<Rectangle>> {
Class HiddenModel #FFFFFF
}

package Logic <<Rectangle>> {
Class HiddenLogic #FFFFFF
}

Class HiddenOutside #FFFFFF
HiddenOutside ..> Ui

UiManager .left.|> Ui
UiManager -down-> "1" MainWindow
MainWindow *-down->  "1" CliSection
MainWindow *-down-> "1" ResultsSection
ResultsSection *-down-> "1" ModuleSection
ResultsSection *-down-> "1" ProgressSection
ProgressSection *-down-> "1" FooterButtonGroup

ModuleSection -down-> "*" ModuleGroup

MainWindow -left-|> UiPart

ResultsSection --|> UiPart
CliSection --|> UiPart
ModuleSection --|> UiPart
ModuleGroup --|> UiPart
FooterButtonGroup --|> UiPart
ProgressSection--|> UiPart

ModuleGroup ..> Model
ProgressSection ..> Model
UiManager -right-> Logic
MainWindow -left-> Logic

ModuleSection -[hidden]left- ProgressSection
ProgressSection -[hidden]left- CliSection
CliSection -[hidden]left- ResultsSection

MainWindow -[hidden]-|> UiPart
@enduml
